%h2
  = t("view.devise.passwords.change_your_password")

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages! 
  = f.hidden_field :reset_password_token

  %p
    = f.label :password, t("view.devise.passwords.new_password")
    %br
    = f.password_field :password

  %p
    = f.label :password_confirmation, t("view.devise.passwords.confirm_password")
    %br
    = f.password_field :password_confirmation 

  %p
    = f.submit t("button.devise.change_my_password")

= render :partial => "devise/shared/links"
