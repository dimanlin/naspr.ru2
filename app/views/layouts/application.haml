!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры", :name => "keywords"}/
    %meta{:content => "Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры", :name => "description"}/
    = stylesheet_link_tag("main.css")
    %title Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры
    = javascript_include_tag "jquery.min.js"
    = javascript_include_tag "modernizr-1.7.min.js"
    = javascript_include_tag "jquery-ui-1.8.12.custom.min.js"
    = javascript_include_tag "rails.js"
    = javascript_include_tag "application.js"
    = csrf_meta_tag
  %body
    - unless current_user
      .registration_box
        .close_login_box
        .login_box.boxshadow
          .header_login_box
            %h1
              = t("h1.auth")
            = t("simple_texts.after_auth")
          - form_for User.new, :url => new_user_session_path, :html => { :class => "ajax_form" } do |f|
            = hidden_field_tag "format", "js"
            %table
              %tr
                %td
                %td{:colspan => 2}
                  #login_error
                    = error_messages_for @resource
              %tr
                %td.text_align_right
                  = t("labels.simple_email")
                %td{:colspan => 2}
                  = f.text_field :email, :class => "auth_input"
              %tr
                %td.text_align_right
                  = t("labels.password")
                %td{:colspan => 2}
                  = f.password_field :password, :class => "auth_input"
              %tr.tr_height
                %td
                %td
                  = f.check_box :remember_me
                  = t("labels.remember_me")
                %td.text_align_right
                  = link_to t("link.foget_password"), new_user_password_path(), :id => "link_foget_password"
            = image_submit_tag "button_login.png", :class => "login_button"
    %header
      .logo
        %h1
          %a{:href => "http://naspr.ru/"}
            = image_tag "naspr.jpg", :alt => t("alt.opinion_people")
      .header
        %h1= t("h1.whether_rights_i")
      - unless current_user
        .enter
          = link_to t("view.main_menu.sign_in"), new_user_session_path, :id => "show_login_form"
        .registration
          = link_to t("view.main_menu.registration"), new_user_registration_path
      - else
        .registration
          = link_to t("view.main_menu.logout"), destroy_user_session_path
    .notice
      = notice
    .alert
      = alert
    %nav
      - if current_user
        = link_to t("view.main_menu.new_post"), new_post_path
        = link_to t("view.main_menu.my_posts"), posts_path(:type => current_user.email)
      = link_to t("link.main_page"), root_path
    .content
      = yield
    %footer
      .footer_menu
        %a{:href => "http://naspr.ru/page/advertising"}
          =t("link.advertising")
        = link_to t("link.contacts"), new_contacts_path
      .clear

:javascript

  $(document).ready(function() {
    $(".registration_box").draggable();
    $("#show_login_form").click(function() {
      $(".registration_box").show()
      return false
    })

    close_login_box()

  })
