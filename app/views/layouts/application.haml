!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры", :name => "keywords"}/
    %meta{:content => "Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры", :name => "description"}/
    = stylesheet_link_tag("main.css")
    %title Общественное мнение, истина, прав ли я, споры, мнения, дебаты, мнение народа, коллективные споры
    = javascript_include_tag "jquery.min.js"
    = javascript_include_tag "modernizr-1.7.min.js"
    = javascript_include_tag "jquery-ui-1.8.12.custom.min.js"
    = javascript_include_tag "rails.js"
    = javascript_include_tag "application.js"
    = csrf_meta_tag
  %body
    - unless current_user
      .registration_box
        .close_login_box
        .login_box.boxshadow
    %header
      .logo
        %h1
          %a{:href => "http://naspr.ru/"}
            = image_tag "naspr.jpg", :alt => t("alt.opinion_people")
      .header
        %h1= t("h1.whether_rights_i")
      - unless current_user
        .enter
          = link_to t("view.main_menu.sign_in"), new_user_session_path, :class => "show_login_form"
        .registration
          = link_to t("view.main_menu.registration"), new_user_registration_path
      - else
        .registration
          = link_to t("view.main_menu.logout"), destroy_user_session_path
    .notice
      = notice
    .alert
      = alert
    = render :partial => "shared/main_menu"
    .content
      = yield
    %footer
      .footer_menu
        = link_to t("link.advertising"), page_url(:permalink => "advertisement")
        = link_to t("link.contacts"), new_contacts_path
      .clear

:javascript
  $(document).ready(function() {
    fix_navigation()
  })
