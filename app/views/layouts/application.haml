!!!
%html
  %head
    %title
      NasprRu2
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag
  %body
    .notice
      = notice
    .alert
      = alert
    = link_to t("view.main_menu.main_page"), root_url
    = link_to t("view.main_menu.posts"), posts_url
    - unless current_user
      = link_to t("view.main_menu.registration"), new_user_registration_path
      = link_to t("view.main_menu.sign_in"), new_user_session_path
    - else
      = link_to t("view.main_menu.logout"), destroy_user_session_path
    = yield

